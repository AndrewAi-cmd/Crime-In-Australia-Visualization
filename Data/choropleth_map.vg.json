{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Crime Index Global",
    "color": "black"
  },
  "width": 500,
  "height": 400,
  "config": {
    "view": {
      "stroke": "transparent"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/AndrewAi-cmd/FIT3179-Week-10-homework/master/world.topojson",
    "format": {
      "type": "topojson",
      "feature": "custom.geo"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/AndrewAi-cmd/FIT3179-Week-10-homework/master/Data/countrycrimeindex.csv"
        },
        "key": "country",
        "fields": ["Crimeindex"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "white"
  },
  "encoding": {
    "color": {
      "field": "Crimeindex",
      "type": "quantitative",
      "scale": { "scheme": "darkred", "reverse": false },
      "title": "Crime Index"
    },
    "tooltip": [
      { "field": "properties.name", "type": "nominal", "title": "Country" },
      {
        "field": "Crimeindex",
        "type": "quantitative",
        "title": "Crime Index"
      }
    ]
  }
}